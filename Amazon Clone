#JavaScrippt:

 // Show alert when user clicks on "Click here to go to amazon.in"
document.querySelector('.hero-message a').addEventListener('click', function () {
    alert('Redirecting to amazon.in...');
    // In real project, you might do: window.location.href = "https://www.amazon.in";
});

// Simulate sign-in click
document.querySelector('.nav-signin').addEventListener('click', function () {
    alert('Sign-in functionality coming soon!');
});

// Simulate cart click
document.querySelector('.nav-cart').addEventListener('click', function () {
    alert('Your cart is empty!');
});


// Scroll to top on "Back to Top" click
document.querySelector('.foot-pannel1').addEventListener('click', () => {
    window.scrollTo({
        top: 0,
        behavior: 'smooth'
    });
});
